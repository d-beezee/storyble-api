  "rules": {
    "path-parameter-camel-case": {
      "given": ["#Request_Parameter_Path"],
      "severity": "error",
      "then": {
        "function": "casing",
        "functionOptions": {
          "disallowDigits": true,
          "type": "camel"
        }
      },
      "name": "path-parameter-camel-case"
    },
    "path-camel-case": {
      "given": ["#Path_Item"],
      "severity": "error",
      "then": {
        "function": "casing",
        "functionOptions": {
          "disallowDigits": true,
          "type": "camel"
        },
        "field": "name"
      },
      "name": "path-camel-case"
    }
  },
